<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suggestion" android:layout_width="match_parent"
    android:gravity="center" android:orientation="horizontal"
    android:layout_height="170dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView android:textColor="#787878" android:id="@+id/notification_text_title" android:layout_width="match_parent"
            android:singleLine="true" android:text="App Suggestions" android:textStyle="bold" android:ellipsize="end" android:lines="1"
            android:textSize="24dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/mobile_icon"
                android:id="@+id/imgButtn_suggest2"
                android:foregroundGravity="center"
                android:scaleType="fitCenter"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/mobile_icon"
                android:id="@+id/imgButtn_suggest1"
                android:foregroundGravity="center"
                android:scaleType="fitCenter"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/mobile_icon"
                android:id="@+id/imgButtn_suggest3"
                android:foregroundGravity="center"
                android:scaleType="fitCenter"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>